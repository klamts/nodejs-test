<body>
    <label for="voiceSelect">ğŸ”Š Chá»n giá»ng Ä‘á»c:</label>
  <select id="voiceSelect"></select>
  <h2>ğŸ§ Luyá»‡n nghe Ã¢m - Unit <%= unit %></h2>

  <button onclick="nextQuestion()">â­ Tá»« tiáº¿p theo</button><br><br>
  <h2 id="wordLabel"></h2>
  <button onclick="playWord()">ğŸ”Š Nghe tá»«</button>
  

  <div class="sound-buttons">
    <% targetSounds.forEach(sound => { %>
      <button onclick="selectSound('<%= sound %>')">/<%= sound %>/</button>
    <% }) %>
  </div>

  <div id="positionOptions" class="position-options" style="display:none;">
    <p>ğŸ“Œ Ã‚m /<span id="currentSound"></span>/ xuáº¥t hiá»‡n á»Ÿ vá»‹ trÃ­ nÃ o?</p>
    <button onclick="checkAnswer('start')">Äáº§u</button>
    <button onclick="checkAnswer('middle')">Giá»¯a</button>
    <button onclick="checkAnswer('end')">Cuá»‘i</button>
    <button onclick="checkAnswer('none')">KhÃ´ng cÃ³</button>
  </div>

  <div id="feedback"></div>

  <script>
    const words = <%- JSON.stringify(words) %>;
     let voices = [];

  // Load danh sÃ¡ch voice
  function loadVoices() {
    voices = speechSynthesis.getVoices();

    const voiceSelect = document.getElementById("voiceSelect");
    voiceSelect.innerHTML = ''; // reset

    voices.forEach((voice, index) => {
      const option = document.createElement('option');
      option.value = index;
      option.textContent = `${voice.name} (${voice.lang})`;
      voiceSelect.appendChild(option);
    });
    voiceSelect.selectedIndex = 114;
  }

  // Má»™t sá»‘ trÃ¬nh duyá»‡t cáº§n Ä‘á»£i event nÃ y má»›i cÃ³ danh sÃ¡ch voice
  speechSynthesis.onvoiceschanged = loadVoices;

    let currentWord = null;
    let currentSound = "";

    const ipaConsonants = ['tÊƒ','dÊ’','Êƒ','Ê’','Î¸','Ã°','Å‹','t','d','k','g','p','b','s','z','m','n','l','r','f','v','h','j','w','Ê”'];
    const ipaVowels = ['iË','Éª','e','Ã¦','ÊŒ','É‘Ë','É’','É”Ë','ÊŠ','uË','É™','ÉœË','eÉª','aÉª','É”Éª','aÊŠ','É™ÊŠ','ÉªÉ™','eÉ™','ÊŠÉ™'];
    const ipaUnits = [...ipaConsonants, ...ipaVowels].sort((a, b) => b.length - a.length);

    function splitIPA(ipaText) {
      if (!ipaText) return [];
      let ipa = ipaText.replace(/^\/|\/$/g, '');
      const result = [];
      while (ipa.length > 0) {
        let matched = false;
        for (const unit of ipaUnits) {
          if (ipa.startsWith(unit)) {
            result.push(unit);
            ipa = ipa.slice(unit.length);
            matched = true;
            break;
          }
        }
        if (!matched) {
          result.push(ipa[0]);
          ipa = ipa.slice(1);
        }
      }
      return result;
    }

    function nextQuestion() {
      const random = words[Math.floor(Math.random() * words.length)];
      currentWord = random;
      currentSound = "";
      document.getElementById("wordLabel").textContent = random.word_text;
      // XÃ³a pháº£n há»“i
      const feedbackElem = document.getElementById("feedback");
      feedbackElem.innerHTML = "";         // âœ… XÃ³a ná»™i dung pháº£n há»“i (dÃ¹ng innerHTML)
      feedbackElem.className = "";         // âœ… XÃ³a class "correct"/"incorrect"
      document.getElementById("positionOptions").style.display = "none";
    }

    function playWord() {
  if (!currentWord) return;
  const utterance = new SpeechSynthesisUtterance(currentWord.word_text);

  const voiceSelect = document.getElementById("voiceSelect");
  const selectedIndex = parseInt(voiceSelect.value, 10);
  if (voices[selectedIndex]) {
    utterance.voice = voices[selectedIndex];
  }

  utterance.lang = "en-US";
  speechSynthesis.speak(utterance);
}

    function selectSound(sound) {
      currentSound = sound;
      document.getElementById("currentSound").textContent = sound;
      document.getElementById("positionOptions").style.display = "block";
      document.getElementById("feedback").textContent = "";
    }

    function checkAnswer(selectedPosition) {
  const ipa = currentWord.ipa;
  
  const ipaForSplit = ipa.replace(/^\/|\/$/g, '').replace(/[ËˆËŒ]/g, ''); // bá» dáº¥u trá»ng Ã¢m cho xá»­ lÃ½
  const segments = splitIPA(ipaForSplit);
  const feedbackElem = document.getElementById("feedback");

  let actual = 'none';
  const indexes = [];

  // tÃ¬m táº¥t cáº£ vá»‹ trÃ­ xuáº¥t hiá»‡n cá»§a Ã¢m Ä‘ang xÃ©t
  segments.forEach((s, i) => {
    if (s === currentSound) indexes.push(i);
  });

  if (indexes.length === 0) {
    actual = 'none';
  } else {
    // kiá»ƒm tra tá»«ng vá»‹ trÃ­: Ä‘áº§u, cuá»‘i, hoáº·c giá»¯a
    if (indexes.includes(0)) actual = 'start';
    else if (indexes.includes(segments.length - 1)) actual = 'end';
    else actual = 'middle';
  }

  if (selectedPosition === actual) {
    feedbackElem.innerHTML = `âœ… ChÃ­nh xÃ¡c! Ã‚m /${currentSound}/ náº±m á»Ÿ vá»‹ trÃ­ <strong>${vietnamesePos(actual)}</strong> trong tá»« <span class="word-highlight">${currentWord.word_text}</span><br>IPA: <code>${ipa}</code>`;
    feedbackElem.className = 'correct';
  } else {
    feedbackElem.innerHTML = `âŒ Sai. Ã‚m /${currentSound}/ náº±m á»Ÿ vá»‹ trÃ­ <strong>${vietnamesePos(actual)}</strong><br>Tá»«: <strong>${currentWord.word_text}</strong><br>IPA: <code>${ipa}</code>`;
    feedbackElem.className = 'incorrect';
  }
}

    function vietnamesePos(pos) {
      return pos === 'start' ? 'Ä‘áº§u' :
             pos === 'middle' ? 'giá»¯a' :
             pos === 'end' ? 'cuá»‘i' : 'khÃ´ng cÃ³';
    }

    // khá»Ÿi Ä‘á»™ng láº§n Ä‘áº§u
    nextQuestion();
  </script>
</body>
